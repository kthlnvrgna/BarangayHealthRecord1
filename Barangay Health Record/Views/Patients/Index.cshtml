@model IEnumerable<LogicLayer.PatientsModel>

@{
    ViewBag.Title = "Index";
}

<h2>Patient List</h2>
 
<table class="table" style="text-align:center;width:1000px">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Middle Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th>
            Birthday
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nationality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Religion)
        </th>
        <th>
            Patient Type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MiddleName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sex)
    </td>
    <td>
        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.BirthDate))
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nationality)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Religion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PatientID })  <br />
        @Html.ActionLink("Details", "Index", "PatientDetails", new { id = item.PatientID }, null) <br />
        @Html.ActionLink("New Checkup", "ReAdmit", new { id = item.PatientID })
    </td>
</tr>
} 
</table>
